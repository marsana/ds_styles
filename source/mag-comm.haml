= partial :white_hse_menu
.container.bachelor.magistracy.main
    .content.about-program.text-with-banner
        .row 
            .col-xs-12
                .mm-edi{data:{name:'mag_program_comm_attention_text'}}= "<%= block 'mag_program_comm_attention_text' %>" 
        .row
            .col-lg-7.col-md-8.about-profile-program
                .mm-edi{data:{name:'mag_program_comm_declaration_text'}}= "<%= block 'mag_program_comm_declaration_text' %>" 
        .row.about-profile-program
