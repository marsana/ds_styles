                .banner-content-wrapper
                    .banner-title
                        %h3 
                            .title Современный музейный дизайн
                            .arrow
                                = partial :banner_link_arrow
                    .banner-content
                        .mm-edi{data:{name:'mag_program_comm_museumdesign_text'}}= "<%= block 'mag_program_comm_museumdesign_text' %>"
                = partial :banner_share, locals: {link: "museumdesign"}
    .row.profile
        .col-lg-7.col-md-8.about-profile-program.content
