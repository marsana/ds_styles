                            .col-md-offset-1.col-md-2.banner-content-wrapper{style: "top:auto; bottom:70px;"}
                                .banner-title
                                    %h3 
                                        Екатерина Сычева
                                .banner-content
                                    .mm-edi{data:{name:'mag_fashion_sichova_text'}}= "<%= block 'mag_fashion_sichova_text' %>"
