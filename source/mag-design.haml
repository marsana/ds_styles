                .substrate-banner{ style: "background-image: url(\"#{ image_path('regional-branding-banner2.png')}\");"}
                .banner-content-wrapper-top
                    .banner-persone-name
                        Михаил Лабазов и Михаил Лабазов мл. 
                    .banner-persone-status
                        куратор профиля
                .banner-content-wrapper
                    .banner-title
                        %h3 
                            .title Территориальный брендинг и&nbsp;дизайн городской среды
                            .arrow
                                = partial :banner_link_arrow
                    .banner-content
                        .mm-edi{data:{name:'mag_program_design_regional_text'}}= "<%= block 'mag_program_design_regional_text' %>"
                = partial :banner_share, locals: {link: "regional-branding"}
        %a.col-md-6.banner-card{href: "http://design.hse.ru/fashion-mag"}
            .substrate-banner-wrapper
                .substrate-banner{ style: "background-image: url(\"#{ image_path('fashion-mag-banner.png')}\");"}
                .banner-content-wrapper-top
                    .banner-persone-name
                        Анзор Канкулов
                    .banner-persone-status
                        куратор профиля
                .banner-content-wrapper
                    .banner-title
                        %h3 
                            .title Мода
                            .arrow
                                = partial :banner_link_arrow
                    .banner-content
                        .mm-edi{data:{name:'mag_program_design_fashion_text'}}= "<%= block 'mag_program_design_fashion_text' %>"
                = partial :banner_share, locals: {link: "fashion-mag"}
    .row.profile
        .col-lg-7.col-md-8.about-profile-program.content
            = partial :creative_map, locals: {link: "http://creativemap.hse.ru/timetable/1215"}
