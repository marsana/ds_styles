        .row.decoration-line-wrapper
            .decoration-line.col-md-pull-1
            .col-lg-7.col-md-8.practice-content
                .mm-edi{data:{name:'mag_program_design_exam_text'}}= "<%= block 'mag_program_design_exam_text' %>"
                .get-consultation-button
                    %a.hse-menu__button.popUp{:href => "#", :data => { class: ".bak"}} Получить&nbsp;консультацию
            .col-lg-3.col-md-4.col-lg-offset-2.col-sm-12.col-xs-12
                .bachelor-info.bachelor-info-additional.bachelor-info-additional-second
                    .info-item
